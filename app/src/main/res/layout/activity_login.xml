<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:padding="30dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/header_titlelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="Log in"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingStart="13sp"
        android:layout_below="@id/header_titlelogin"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/etLogNomer"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black2"
        android:hint="Enter your email"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLogNomer"
        android:layout_marginTop="15dp"
        android:paddingStart="13sp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/etLogPassword"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black2"
        android:hint="Enter your password"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_above="@+id/haveAccount"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_button"
        android:fontFamily="sans-serif-light"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/haveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="sans-serif"
        android:text="Don't have an account?"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/toSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:layout_toEndOf="@+id/haveAccount"
        android:fontFamily="sans-serif-black"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>